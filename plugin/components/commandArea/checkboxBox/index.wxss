@import '/static/style/weui.wxss';
@import '/static/style/main.wxss';

.image-box{
  overflow: hidden;
  height:300rpx;
  width:300rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.image-box-1{
  border-radius: 20rpx;
  height: 400rpx;
}
.image{
  width:100%;
  height: 100%;
}
.haveimage{
  width:300rpx;
  border-radius: 20rpx;
  height:400rpx;
  border: 1rpx solid #dadada;
  margin-left: 20rpx;
  position: relative;
}
.haveimage .imageBox{
  display: block;
}
.haveimage .value {
  width:100%;
  word-wrap: break-word;
}
.no-image{
  width: auto;
  border-radius: 10rpx;
  padding:6rpx;
  margin-left: 30rpx;
}
.no-image .image-box{
  display: none;
}
.no-image .value{
  width: 100%;
  white-space: nowrap;
  padding:6rpx 20rpx;
}
.select-box{
  display: none;
}
.checkMe{
   border: 2rpx solid #1cb2b9;
}

.checkMe.no-image {
  padding: 4rpx;
}


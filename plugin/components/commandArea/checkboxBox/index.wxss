.haveimage .valueBox{
  display: flex;
  align-items: center;
  justify-items: center;
  justify-content: center;
  align-content: center;
  width: 300rpx;
  height: 400rpx;
}

.value{
  font-size: 28rpx;
}

.haveimage .checked {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}
.background-fff{
  background: #fff;
}
.image-value{
  text-align:center;
  font-size:28rpx;
  line-height: 50rpx;
  height: 100rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}